<h1>Editing Book</h1>
<!-- form_for部分 -->
<%= form_for(@book) do |f| %>
	  <% @book.errors.full_messages.each do |message| %>
	      <%= message %>
	  <% end %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Summary</h4>
    <%= f.text_area :body %>
    <br><%= f.submit 'Update Book' %>
<% end %>

<td><%= link_to "Show", book_path(@book.id) %><td>
|
<a href = "/books">Back</a>