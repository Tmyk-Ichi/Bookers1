<!DOCTYPE html>
<html lang="ja">
	<head>
		<meta charset="utf-8">
		<title>bookers</title>
		<link rel="stylesheet" href="books.scss">
	</head>

  <body>

	<h2>Books</h2>
	  <table >
	    <thead>
	    	<tr>
	    	  <th>Title</th>
	    	  <th>Summary</th>
	    	  <th></th>
	    	</tr>
	    </thead>
	        <tr>
    <% @books.each do |book| %>
	    <tbody>
	          <td><%= book.title %></td>
	    	  <td><%= book.body%></td>
	    	  <td><%= link_to "Show", book_path(book.id) %><td>
	    	  <td><%= link_to "Edit", edit_book_path(book.id) %><td>
	    	  <td><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" =>"本当に削除しますか？" %><td>
	    </tbody>
	    	</tr>
	<% end %>
	    </table>


    <div class = "newbooks">
      <h2>New Book</h2>

      <!--投稿部分 -->
      <%= form_for(@book, url:"/books/create") do |f| %>
          <% @book.errors.full_messages.each do |message| %>
              <%= message %>
          <% end %>

	      <h4>Title</h4>
	      <%= f.text_field :title %>

	      <h4>Summary</h4>
	      <%= f.text_area :body %>

	      <br><%= f.submit 'Create book' %>

	      <% end %>

    </div>

  </body>
</html>
